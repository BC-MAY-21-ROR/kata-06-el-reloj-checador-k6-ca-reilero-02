<ul  data-controller="clock" class="countdown">
    <li>
        <span class="hours" data-clock-target="hours"></span>
        <h3>hours</h3>
    </li>
    <li>
        <span class="minutes" data-clock-target="minutes"></span>
        <h3>minutes</h3>
    </li>
    <li>
        <span class="seconds" data-clock-target="seconds"></span>
        <h3>seconds</h3>
    </li>
  </ul>


<div class="subscribe-form">
  <%= form_with url:'/', method: 'post' do |form| %>
    <div>
      <%= form.label :id_employee, 'Enter id employee'%>
      <br>
      <%= form.text_field :id_employee %>
    </div>
    <%= button_tag type: 'submit', id: "id_employee" do %>
      Check
      <span>
        <i class="fa-sharp fa-solid fa-door-open"></i>
      </span>
    <% end %>
  <% end %>
</div>